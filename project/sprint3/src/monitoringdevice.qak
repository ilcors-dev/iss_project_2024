		whenMsg unload_ash -> handleUnloadAsh
		
	State handleLoadAsh {
		printCurrentMessage
		onMsg(load_ash : load_ash(D)) {
			[# Distance -= payloadArg(0).toInt() #]
			
			println("loaded ash, sonar measuring = $Distance")
			emitlocalstream sonar_data : distance($Distance)
		}
	}
		
	Transition t0
		whenMsg load_ash -> handleLoadAsh
		whenMsg unload_ash -> handleUnloadAsh
		
	State handleUnloadAsh {
		printCurrentMessage
		onMsg(unload_ash : unload_ash(D)) {
			[# Distance += payloadArg(0).toInt() #]
			
			println("unloaded ash, sonar measuring = $Distance")
			emitlocalstream sonar_data : distance($Distance)
		}
	}
		
	Transition t0
		whenMsg load_ash -> handleLoadAsh
		whenMsg unload_ash -> handleUnloadAsh
