QActor mock_ash_unloader_external context ctxmonitoringdevice {
	State s0 initial {
		println("$name starts")
		delay 90000
	}
	
	Goto work
	
	State work {
		forward sonar_device -m unload_ash : unload_ash(25)
		println("$name unloaded ash")
		delay 90000
	}
	
	Goto work
}
